<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <FrameLayout
       android:id="@+id/frameLayout"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:background="#FFA000"
       android:padding="8dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:fontFamily="serif"
          android:gravity="center_vertical"
          android:text="@string/app_name"
          android:textColor="@color/white"
          android:textSize="18dp" />

      <ImageView
          android:id="@+id/AM_ImageView_AddToCart"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_gravity="right"
          android:layout_marginTop="4dp"
          android:src="@drawable/ic_baseline_add_shopping_cart_24" />
   </FrameLayout>


   <ss.com.bannerslider.views.BannerSlider
       android:padding="2dp"

       app:defaultIndicators="circle"
       android:id="@+id/AM_bannerSlider"
       android:animateLayoutChanges="true"
       app:interval="2000"
       app:animateIndicators="true"
       app:loopSlides="true"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/frameLayout"
       tools:ignore="MissingConstraints" />

   <com.example.marketapp.View.CustomView
       android:id="@+id/AM_customView_latest"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="2dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/AM_bannerSlider" />

   <com.example.marketapp.View.CustomView
       android:id="@+id/AM_customView_Popular"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="2dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/AM_customView_latest" />

</androidx.constraintlayout.widget.ConstraintLayout>